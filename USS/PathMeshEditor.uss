.use-mesh-header {
    flex-direction: row;
    background-color: rgba(0, 0, 0, 0.07);
}

.use-mesh-header > Foldout {
	width: 0;
}

.use-mesh-content {
    background-color: rgba(0, 0, 0, 0.03);
	padding-left: 8px;
	padding-right: 6px;
	padding-bottom: 2px;
	padding-top: 4px;
	border-color: rgba(0, 0, 0, 0.4);
	border-top-width: 1px;
}

.use-mesh {
	border-width: 1px;
	border-color: rgba(0, 0, 0, 0.4);
	border-radius: 2px;
	margin-top: 1px;
	margin-bottom: 1px;
}